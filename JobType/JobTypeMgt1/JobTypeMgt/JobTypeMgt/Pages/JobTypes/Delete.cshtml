    ViewData["Title"] = "Delete";
}

<h4>Delete Job Type</h4>

<h5>Are you sure you want to delete this?</h5>
<div>
    
    <hr />
    
    <div class="row">       
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="JobTypeHed.JobTypePk" />
            <input type="hidden" asp-for="jobTypeDet.JobTypeDetPk" />
            <input type="hidden" asp-for="JobTypeHed.AddUser" />
            <input type="hidden" asp-for="JobTypeHed.AddDate" />
            <input type="hidden" asp-for="JobTypeHed.AddMach" />
            <input type="hidden" asp-for="JobTypeHed.Session" />
            <input type="hidden" asp-for="JobTypeHed.RecordId" />
            <input type="hidden" asp-for="JobTypeHed.timestamp_column" />
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label asp-for="JobTypeHed.JobTypecode" class="control-label">Job Type Code:</label>
                    </div>
                    <div class="col-md-4">
                        <input asp-for="JobTypeHed.JobTypecode" class="form-control"  disabled/>
                        <span asp-validation-for="JobTypeHed.JobTypecode" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <br>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label asp-for="JobTypeHed.JobTypPrefix" class="control-label">Job Type Prefix:</label><span style="color:red">*</span>
                    </div>
                    <div class="col-md-4">
                        <input asp-for="JobTypeHed.JobTypPrefix" class="form-control" disabled />
                        <span asp-validation-for="JobTypeHed.JobTypPrefix" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <br>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label asp-for="JobTypeHed.JobTypeDescription" class="control-label">Description:</label><span style="color:red">*</span>
                    </div>
                    <div class="col-md-10">
                        <input asp-for="JobTypeHed.JobTypeDescription" class="form-control" disabled/>
                        <span asp-validation-for="JobTypeHed.JobTypeDescription" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-3">

                        <input asp-for="JobTypeHed.JobTypActive" type="checkbox" class="form-check-input" disabled />
                        <label asp-for="JobTypeHed.JobTypActive" class="control-label">Is Active</label>

                    </div>
                </div>
            </div>

            <br />
            <h6>Milestone Details</h6>

