                        </select>
                        <span asp-validation-for="jobTypeDet.JobTypeMilestone" class="text-danger"></span>
                    </div>
                </div>
            </div> *@

            <br />

     @*        <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label asp-for="jobTypeDet.JobTypStatus" class="control-label">Loading Stage</label>
                    </div>
                    <div class="col-md-4">
                        <select asp-for="jobTypeDet.JobTypStatus" class="form-control" disabled>
                            <option value="Option1">Option 1</option>
                            <option value="Option2">Option 2</option>
                        </select>
                        <span asp-validation-for="jobTypeDet.JobTypStatus" class="text-danger"></span>
                    </div>
                </div>
            </div> *@


            @if (Model.ErrMsg.Length == 0)
            {
                <table class="table table-bordered table-responsive-md table-striped text-center " id="tblMilestone">
                    <thead>
                        <tr id="TbRow">

                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.jobTypeDet.JobTypeMilestone)
                            </th>

                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.jobTypeDet.JobTypStatus)
                            </th>



                        </tr>
                    </thead>
                    <tbody>

                        @for (int i = 0; i < Model.JobTypeDetList.Count; i++)
                        {
                            <tr id="tblMilestoneRw">

                                <td class="pt-3-half" hidden>
                                    @Html.HiddenFor(model => model.JobTypeDetList[i].JobTypePk, new { id = "JobTypeHedID" })
                                </td>

                                <td class="pt-3-half" hidden>
                                    @Html.HiddenFor(model => model.JobTypeDetList[i].JobTypeDetPk, new { id = "JobTypeDetId" })
                                </td>

                                <td class="pt-3-half">
                                    @Html.DisplayFor(model => model.JobTypeDetList[i].JobTypeMilestone)
                                </td>

                                <td class="pt-3-half">
                                    @Html.DisplayFor(model => model.JobTypeDetList[i].JobTypStatus)
                                </td>



                            </tr>
                        }



                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    @Model.ErrMsg
                </div>
            }


            <br />
        
        </form>
    
    </div>
    
    <form method="post">
        <div class="row">
            <div class="col-md-9"></div>
            <div class="col-md-3">
        <input type="hidden" asp-for="JobTypeHed.JobTypePk" />
