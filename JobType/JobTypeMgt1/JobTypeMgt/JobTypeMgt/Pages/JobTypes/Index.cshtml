@page
@model JobTypeMgt.Pages.JobTypes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" />
<style>
    .badge {
        background-color: indianred;
        color: white;
        padding: 3px 7px;
        text-align: center;
        border-radius: 5px;
    }

    .badge-Sucess {
        background-color: greenyellow;
        color: white;
        padding: 3px 7px;
        text-align: center;
        border-radius: 5px;
    }
</style>

<h4>Job Type List</h4>

<p>
    <a class="btn btn-success"  asp-page="Create">Create Job Type</a>
</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
             
               Job Type Code
            </th>
            <th>
              
                Description
            </th>
            <th>
               
                Job Type Prefix
            </th>
            <th>
               
                IsActive
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.JobTypeHed) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JobTypecode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobTypeDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobTypPrefix)
            </td>
            <td>
                    @if (item.JobTypActive == "true")
                    {
                        <span class="badge-Sucess">Active</span>
                    }
                    else
                    {
                        <span class="badge">InActive</span>
                    }
                </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.JobTypePk"><i class="fas fa-edit" style="color:limegreen;"></i></a>
                    <a asp-page="./Details" asp-route-id="@item.JobTypePk"><i class="fa fa-info-circle" aria-hidden="true" style="color:lightseagreen"></i></a> 
                    <a asp-page="./Delete" asp-route-id="@item.JobTypePk"><i class="fa fa-trash" aria-hidden="true" style="color:red"></i></a>


            </td>
        </tr>
}
    </tbody>
</table>
